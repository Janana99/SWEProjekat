<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivityResult">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDodavanjeRecepata"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple_500"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/dugme_na_search_aktiviti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reply_icon" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pretragaRecepti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDodavanjeRecepata" />

    <ImageView
        android:id="@+id/nemaRecepta"
        android:layout_width="371dp"
        android:layout_height="495dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@+id/pretragaRecepti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarDodavanjeRecepata"
        app:srcCompat="@drawable/nije_pronadjen_ni_jedan1" />

</androidx.constraintlayout.widget.ConstraintLayout>